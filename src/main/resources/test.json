{
    "configuration": {
        "status": "off",

        "appenders": {
            "Console": {
                "name": "console",
                "PatternLayout": {
                    "pattern": "%d{yyyy-MM-dd HH:mm:ss,SSS} %p %c - %m%n"
                }
            },
            "File": {
                "name": "R",
                "fileName": "${java.io.tmpdir}/spoon-log.log",
                "PatternLayout": {
                    "pattern": "%d{yyyy-MM-dd HH:mm:ss,SSS} %p %c - %m%n"
                }
            }
        },

        "loggers": {
            "logger": {
                "name": "spoon",
                "level": "debug",
                "AppenderRef": {
                    "ref": "R"
                }
            },
            "root": {
                "level": "info",
                "AppenderRef": {
                    "ref": "console"
                }
            }
        }
    }
}
